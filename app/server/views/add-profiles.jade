extends layout

// preset form values if we receive a userdata object //
- user = typeof(udata) != 'undefined' ? udata : { }
// store the userId on the client side in a hidden input field //
input(type='hidden', value= user._id)#userId
block content
    #account-form-container
        form( method="post")#add-profile-form.form-horizontal.well.span6
            h1
            p#sub1.subheading
            hr
            #user-cg.control-group
                label.control-label(for='user-tf') Username
                .controls
                    input#user-tf.input-xlarge.disabled(type='text', name='user', value= user.user)

            p.subheading Profile Info
            hr

            #profile-name-cg.control-group
                label.control-label(for='profile-name-tf') Profile Name
                .controls
                    input#profile-name-tf.input-xlarge(type='text', name='profile-name')
            #description-cg.control-group
                label.control-label(for='age-tf') Description
                .controls
                    input#age-tf.input-xlarge(type='textarea', name='description')

            p.subheading Profile Attributes
            hr

            fieldset
                #name-cg.control-group
                    label.control-label(for='name-tf') Name
                    .controls
                        input#name-tf.input-xlarge(type='text', name='name')

                #age-cg.control-group
                    label.control-label(for='age-tf') Age
                    .controls
                        input#age-tf.input-xlarge(type='text', name='age')
                hr
                p#sub2.subheading
                .form-actions
                    button(type='submit') Add Profile
// display form errors in a custom modal window //
include modals/form-errors

    block scripts
        script(src='/vendor/jquery.min.js')
        script(src='/vendor/jquery.form.js')
        script(src='/vendor/bootstrap-modal.js')
        script(src='/vendor/bootstrap-transition.js')
        script(src='/js/views/profile.js')
        script(src='/js/controllers/profileController.js')